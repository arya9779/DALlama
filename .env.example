# API Keys (Optional for demo - DALlama works without these)
# Get Twitter API: https://developer.twitter.com/en/portal/dashboard
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Get News API: https://newsapi.org/register
NEWS_API_KEY=your_news_api_key_here

# Get Alpha Vantage: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_KEY=your_alpha_vantage_key_here

# Get Hugging Face (for models): https://huggingface.co/settings/tokens
HUGGINGFACE_TOKEN=your_hf_token_here

# Get Weights & Biases (for tracking): https://wandb.ai/authorize
WANDB_API_KEY=your_wandb_key_here

# Database
REDIS_URL=redis://localhost:6379/0
DATABASE_URL=sqlite:///./data/sentiment.db

# Model Configuration (GTX 1650 Ti Optimized)
MODEL_NAME=ProsusAI/finbert
HUGGINGFACE_TOKEN=your_hf_token_here
WANDB_API_KEY=your_wandb_key_here

# Training Configuration (4GB VRAM Optimized)
BATCH_SIZE=4
LEARNING_RATE=2e-4
MAX_LENGTH=512
NUM_EPOCHS=5
USE_QLORA=true
FP16=true

# Serving Configuration (Single GPU Optimized)
API_HOST=0.0.0.0
API_PORT=8000
WORKERS=1

# Hardware Configuration
CUDA_VISIBLE_DEVICES=0
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:512

# Data Configuration
DATA_DIR=./data
MODELS_DIR=./models
LOGS_DIR=./logs

# Stock Configuration (Top Indian Stocks)
DEFAULT_STOCKS=RELIANCE,TCS,INFY,HDFCBANK,ICICIBANK,KOTAKBANK,LT,ITC,HINDUNILVR,SBIN